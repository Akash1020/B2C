<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nsv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="#DADADA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r">

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Log In"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/error"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text=""/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#fff">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/first"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_username0"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="4dp"
                    android:drawableTint="@android:color/darker_gray"
                    android:hint="Phone Number"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="textPhonetic"
                    android:maxLines="1"

                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:clickable="true"/></android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/second"
                    android:layout_below="@+id/first"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/pswd0"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:inputType="textPassword"

                    android:backgroundTint="@color/colorAccent"

                    android:drawablePadding="4dp"
                    android:layout_below="@+id/edit_username0"
                    android:drawableTint="@android:color/darker_gray"
                    android:hint="Password"
                    android:maxLines="1"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:clickable="true"/></android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign"
                    android:gravity="right"
                    android:elevation="8dp"
                    android:layout_below="@+id/second"
                    android:text="Sign In"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Create Account"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#fff">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/reg"
                    android:text="PostCode"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/first0"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/pin"
                    android:padding="20dp"
                    android:paddingTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:inputType="textCapCharacters"

                    android:backgroundTint="@color/colorAccent"

                    android:drawablePadding="4dp"
                    android:layout_below="@+id/reg"
                    android:drawableTint="@android:color/darker_gray"
                    android:hint="Enter here..."
                    android:maxLines="1"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:clickable="true"/></android.support.design.widget.TextInputLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register"
            android:gravity="right"
            android:layout_below="@+id/cont"
            android:text="Test"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text=""/>

        </android.support.v7.widget.CardView>








    </LinearLayout>
</android.support.v4.widget.NestedScrollView>