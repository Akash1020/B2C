<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:background="#DADADA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="#455A64"
            android:layout_margin="@dimen/card_margin"
            card_view:cardUseCompatPadding="true"


            card_view:cardElevation="8dp"

            card_view:cardCornerRadius="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"

                android:text="Offers"
                android:textColor="#fff"/>

        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view11"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/card_view2"
        android:layout_margin="@dimen/card_margin"
        card_view:cardBackgroundColor="#3F51B5"

        card_view:cardElevation="8dp"

        card_view:cardCornerRadius="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"

            android:text="You may Love"
            android:textColor="#fff"/>

    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#00BCD4"

            card_view:cardElevation="8dp"

            card_view:cardCornerRadius="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/card_view2"
            android:layout_toEndOf="@+id/card_view2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Trending"/>

        </android.support.v7.widget.CardView>

</RelativeLayout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp">
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    </LinearLayout></ScrollView>